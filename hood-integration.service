[Unit]
Description=Hood.de Integration Service
After=network.target

[Service]
Type=notify
User=www-data
Group=www-data
WorkingDirectory=/var/www/hood.automatonsoft.de
Environment=DJANGO_ENV=production
EnvironmentFile=/var/www/hood.automatonsoft.de/.env
ExecStart=/var/www/hood.automatonsoft.de/venv/bin/gunicorn --config gunicorn.conf.py hood_integration_service.wsgi:application
ExecReload=/bin/kill -s HUP $MAINPID
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
