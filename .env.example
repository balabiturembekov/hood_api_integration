# Django настройки
DEBUG=False
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=hood.automatonsoft.de,www.hood.automatonsoft.de,localhost

# База данных PostgreSQL
DATABASE_URL=postgresql://username:password@localhost:5432/hood_integration

# Hood.de API настройки
HOOD_API_USERNAME=your_hood_username
HOOD_API_PASSWORD=your_hood_password
HOOD_ACCOUNT_NAME=your_account_name
HOOD_ACCOUNT_PASS=your_account_password

# Redis для кэширования
REDIS_URL=redis://localhost:6379/0

# Sentry для мониторинга ошибок
SENTRY_DSN=your_sentry_dsn_here

# Email настройки
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_email_password

# Статические файлы
STATIC_ROOT=/var/www/hood.automatonsoft.de/static/
MEDIA_ROOT=/var/www/hood.automatonsoft.de/media/

# Безопасность
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
